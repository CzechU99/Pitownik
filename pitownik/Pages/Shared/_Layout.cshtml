<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PITOWNIK - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" />
    <!--<link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />-->
</head>
<body>
    @if (ViewContext.RouteData.Values["page"].ToString() != "/Index"){
        <header>
            <nav class="navbar sticky-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3" style="position: fixed; top:0; right:0; left:0;">
            <div class="container">
                <a class="navbar-brand" href="">Pitownik</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-page="/MojeKonto">Moje konto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-page="/DodajPit">Dodaj PIT</a>
                        </li>
                        <li class="nav-item">
                                <label tabindex="0" class="btn-success btn btn-sm save_form" for="bang" asp-area="" asp-page="/MojeKonto">Zapisz PIT</label>
                        </li>
                            <li class="nav-item">
                                <label tabindex="0" id="btn" class="btn-success btn btn-sm save_form" asp-area="" asp-page="/MojeKonto">Generuj PDF</label>
                            </li>
                    </ul>
                        <a asp-page="/Index" asp-page-handler="Logout" class="btn btn-sm btn-danger">WYLOGUJ</a>
                        <span id="nazwaa_pitu" style="display:none;"></span>
                </div>
            </div>
        </nav>
    </header>
    }
    <div class="container" style="margin-top:80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p style="text-align:center">&copy; 2023 - Rafał Bartoń & Denis Czech</p>            
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>